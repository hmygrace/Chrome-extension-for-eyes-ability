{
  "manifest_version": 2,
  "icons": { "16": "icons/icon.png",
             "48": "icons/icon.png",
            "128": "icons/icon.png" },
  "name": "EyesAbility",
  "homepage_url": "http://selectorgadget.com",
  "description": "Easy, powerful CSS Selector generation.",
  "version": "1.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*","activeTab", "declarativeContent", "storage"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    },
    "default_title": "EyesAbility",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html"
}
